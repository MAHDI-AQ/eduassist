{
  "manifest_version": 3,
  "name": "EduAssist - المساعد التعليمي",
  "description": "أداة مجانية لتصدير البيانات من منصة مدرستي ونظام نور",
  "version": "1.0.1",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "EduAssist",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.madrasati.sa/*",
        "https://*.moe.gov.sa/*", 
        "https://noor.moe.gov.sa/*",
        "https://*.noor.moe.gov.sa/*"
      ],
      "js": [
        "src/content/content-main.js"
      ],
      "css": [
        "assets/css/content-styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/css/*.css",
        "assets/icons/*.png"
      ],
      "matches": [
        "https://*.madrasati.sa/*",
        "https://*.moe.gov.sa/*",
        "https://noor.moe.gov.sa/*",
        "https://*.noor.moe.gov.sa/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.madrasati.sa/*",
    "https://*.moe.gov.sa/*"
  ]
}